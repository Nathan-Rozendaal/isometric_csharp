<Window x:Class="isometric.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:isometric"
        mc:Ignorable="d"
        Title="MainWindow" Height="1500" Width="1000">
    <Grid>
        <Canvas x:Name="canvas" Margin="0" MouseLeftButtonDown="clickevent"/>
        <Canvas x:Name="canvast" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="300">
            <TextBlock x:Name="info" Canvas.Left="10" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="10"/>
        </Canvas>

    </Grid>
</Window>
